{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node", "electron"],
    "lib": ["ES2022", "DOM"],
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmitOnError": false
  },
  "include": [
    "@OneCoreTypes.d.ts",
    "lama-electron-shadcn.ts",
    "main/app.ts",
    "main/types/**/*.ts",
    "main/ipc/controller.ts",
    "main/ipc/handlers/*.ts",
    "main/core/**/*.ts",
    "main/services/**/*.ts",
    "main/models/**/*.ts",
    "main/state/**/*.ts",
    "main/config/**/*.ts",
    "main/utils/**/*.ts",
    "main/recipes/**/*.ts",
    "main/api/**/*.ts",
    "main/startup/**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "**/*.jsx",
    "electron-ui/**",
    "node_modules",
    "dist",
    "vendor",
    "OneDB",
    "specs/**",
    "tests/**",
    "packages/**",
    "reference/**",
    "../lama.core/**"
  ]
}